// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  credential Credential[]
  safenotes  Note[]
}

model Credential {
  id       Int    @id @default(autoincrement())
  url      String
  title    String
  username String
  password String
  users    Users  @relation(fields: [userId], references: [id])
  userId   Int

  @@unique([userId, title])
}

model Note {
  id     Int    @id @default(autoincrement())
  title  String
  note   String
  users  Users  @relation(fields: [userId], references: [id])
  userId Int

  @@unique([userId, title])
}
